// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"script": "svelte:compile",
			"label": "svelte-compile",
			"type": "npm"
		},
		{
			"script": "svelte:compile-dev",
			"label": "svelte-compile-dev",
			"type": "npm"
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
